{
  "manifest_version": 3,
  "name": "Tab Amnesty - Snooze Your Tabs",
  "version": "1.0.0",
  "description": "Snooze tabs to specific times. Free your RAM. Save your sanity.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Amnesty"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

